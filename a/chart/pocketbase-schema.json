          "system": false,
          "required": true,
          "options": {
            "min": 1,
            "max": 255,
            "pattern": ""
          }
        },
        {
          "id": "symbol", 
          "name": "symbol",
          "type": "text",
          "system": false,
          "required": true,
          "options": {
            "min": 1,
            "max": 50,
            "pattern": ""
          }
        },
        {
          "id": "interval",
          "name": "interval", 
          "type": "text",
          "system": false,
          "required": true,
          "options": {
            "min": 1,
            "max": 10,
            "pattern": ""
