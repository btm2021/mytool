        "CREATE INDEX idx_chart_layouts_updated ON chart_layouts (updated)"
      ],
      "listRule": "@request.auth.id != \"\" && (user = @request.auth.id || user = \"\")",
      "viewRule": "@request.auth.id != \"\" && (user = @request.auth.id || user = \"\")", 
      "createRule": "@request.auth.id != \"\"",
      "updateRule": "@request.auth.id != \"\" && user = @request.auth.id",
      "deleteRule": "@request.auth.id != \"\" && user = @request.auth.id",
      "options": {}
